<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:Eventos.Models"
             x:Class="Eventos.Views.CadastroEventoPage"
             Title="Cadastro de Evento"
             BackgroundColor="LightYellow">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="18">

            <Frame BackgroundColor="White" CornerRadius="15" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="12">

                    <Label Text="Cadastro de Evento" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center" 
                           TextColor="#2E4053"/>

                    <Label Text="Nome do evento:" TextColor="#34495E"/>
                    <Entry Text="{Binding Nome}" Placeholder="Digite o nome do evento" />

                    <Label Text="Data de início:" TextColor="#34495E"/>
                    <DatePicker x:Name="pickerInicio" 
                                Date="{Binding DataInicio}" 
                                Format="dd/MM/yyyy"/>

                    <Label Text="Data de término:" TextColor="#34495E"/>
                    <DatePicker x:Name="pickerFim" 
                                Date="{Binding DataFim}" 
                                Format="dd/MM/yyyy"/>

                    <Label Text="Número de participantes:" TextColor="#34495E"/>
                    <Entry Keyboard="Numeric" Text="{Binding NumeroParticipantes}" Placeholder="0" />

                    <Label Text="Local do evento:" TextColor="#34495E"/>
                    <Entry Text="{Binding Local}" Placeholder="Informe o local" />

                    <Label Text="Custo por participante (R$):" TextColor="#34495E"/>
                    <Entry Keyboard="Numeric" Text="{Binding CustoPorParticipante}" Placeholder="0.00" />

                    <Button Text="Cadastrar Evento"
                            Clicked="OnCadastrarClicked"
                            BackgroundColor="Black"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="50" />

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

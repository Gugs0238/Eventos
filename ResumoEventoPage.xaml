<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eventos.Views.ResumoEventoPage"
             Title="Resumo do Evento"
             BackgroundColor="LightYellow">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="18">

            <Frame BackgroundColor="White" CornerRadius="15" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="8">

                    <Label Text="Resumo do Evento"
                           FontAttributes="Bold"
                           FontSize="24"
                           HorizontalOptions="Center"
                           TextColor="#2E4053"/>

                    <Label Text="{Binding Nome}" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                    <Label Text="{Binding Local, StringFormat='Local: {0}'}" TextColor="#34495E"/>
                    <Label Text="{Binding DataInicio, StringFormat='Início: {0:dd/MM/yyyy}'}" TextColor="#34495E"/>
                    <Label Text="{Binding DataFim, StringFormat='Término: {0:dd/MM/yyyy}'}" TextColor="#34495E"/>
                    <Label Text="{Binding DuracaoDias, StringFormat='Duração: {0} dia(s)'}" TextColor="#34495E"/>
                    <Label Text="{Binding NumeroParticipantes, StringFormat='Participantes: {0}'}" TextColor="#34495E"/>
                    <Label Text="{Binding CustoPorParticipante, StringFormat='Custo por participante: R$ {0:F2}'}" TextColor="#34495E"/>
                    <Label Text="{Binding CustoTotal, StringFormat='Custo total: R$ {0:F2}'}" 
                           FontAttributes="Bold" 
                           FontSize="18"
                           TextColor="#1E8449"/>

                    <Button Text="Voltar"
                            Clicked="OnVoltarClicked"
                            BackgroundColor="Black"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="45"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>